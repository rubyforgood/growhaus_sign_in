h1 = t('activity_session.index_title')

table.datatables
  thead
    tr
      th = t('activity_session.name')
      th = t('activity_session.start_time')
      th

    tbody
      - @activity_sessions.each do |activity_session|
        tr
          td = activity_session.activity.name
          td = activity_session.start_time
          td
            = form_tag "/activity_sessions/#{activity_session.id}", method: "put" do
              = hidden_field_tag :checkout, "true"
              = button_tag "#{t('action.check_out')}"

= link_to t('check_in'), user_activities_path
